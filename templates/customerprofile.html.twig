{% extends "master.html.twig" %}

{% block title %}Customer Dashboard
{% endblock %}

{% block content %}

	<div class="container">
		<div class="row justify-content-center mt-10 mb-10">
			<div class="col-md-10 col-lg-10">
				<h1>Your Profile</h1></br>
				<div class="table-responsive">
					<ul>
						<li>
							<strong>Name</strong>
						</li>
						<li>{{ userSession.first_name }}
							{{ userSession.last_name }}</li>
						<li>
							<strong>Email</strong>
						</li>
						<li>{{ userSession.email }}</li>
						<li>
							<strong>Phone</strong>
						</li>
						<li>{{ userSession.phone }}</li>
						<li>
							<strong>Address</strong>
						</li>
						<li>{{ userSession.address }}</li>
						<li>
							<strong>Date of Birth</strong>
						</li>
						<li>{{ userSession.dob }}</li>
						<li>
							{# <strong>Driver's License</strong>
						</li>
						<li>{{ userSession.license }}</li>
						<li>
							<strong>License Expiration</strong>
						</li>
						<li>{{ userSession.license_expiration }}</li> #}
					</li>
				</ul>
			</div>

			<div class="mt-3">
				<a href="/edit-profile" class="btn btn-primary btn-sm">Edit Profile</a>
				<a href="/myreservation" class="btn btn-secondary btn-sm">My Reservation</a>
			</div>

		</div>
	</div>

</div>{% endblock %}
