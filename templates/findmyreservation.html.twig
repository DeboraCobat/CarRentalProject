{% extends "master.html.twig" %}

{% block title %}find my reservation
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row justify-content-left mt-5 mb-5">
			<div class="col-md-8 col-lg-6">

				<h1>Find my reservation</h1>
				<form method="post" action="/findmyreservation">
					<div class="form-group">
						<label for="reservationId">Reservation ID</label>
						<input type="number" class="form-control" id="reservationId" name="reservationId" value="{{ reservationId }}" required>
					</div>
					<button type="submit" class="btn btn-primary btn-sm">Find Reservation</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
